<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.ofek.myappportfolio.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Nanodegree Apps!"
        android:id="@+id/textView"
        android:gravity="center_vertical|center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:textSize="20dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SPOTIFY STREAMER"
        android:id="@+id/spotify_streamer_button"
        android:padding="5dp"
        style="@style/button"
        android:onClick="onButtonClick"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SCORES APP"
        android:id="@+id/scores_app_button"
        android:padding="5dp"
        style="@style/button"
        android:layout_below="@+id/spotify_streamer_button"
        android:layout_alignLeft="@+id/spotify_streamer_button"
        android:layout_alignStart="@+id/spotify_streamer_button"
        android:onClick="onButtonClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LIBRARY APP"
        android:id="@+id/library_app_button"
        android:padding="5dp"
        style="@style/button"
        android:layout_below="@+id/scores_app_button"
        android:layout_alignLeft="@+id/scores_app_button"
        android:layout_alignStart="@+id/scores_app_button"
        android:onClick="onButtonClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BUILD IT BIGGER"
        android:id="@+id/build_it_bigger_button"
        android:padding="5dp"
        android:layout_below="@+id/library_app_button"
        android:layout_alignLeft="@+id/library_app_button"
        android:layout_alignStart="@+id/library_app_button"
        style="@style/button"
        android:onClick="onButtonClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XYZ READER"
        android:id="@+id/xyz_reader_button"
        android:padding="5dp"
        android:layout_below="@+id/build_it_bigger_button"
        android:layout_alignLeft="@+id/build_it_bigger_button"
        android:layout_alignStart="@+id/build_it_bigger_button"
        style="@style/button"
        android:onClick="onButtonClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CAPSTONE: MY OWN APP"
        android:id="@+id/my_own_app_button"
        android:layout_marginTop="36dp"
        android:background="#f81e06"
        android:padding="5dp"
        android:layout_below="@+id/xyz_reader_button"
        android:layout_alignLeft="@+id/xyz_reader_button"
        android:layout_alignStart="@+id/xyz_reader_button"
        android:layout_alignRight="@+id/xyz_reader_button"
        android:layout_alignEnd="@+id/xyz_reader_button"
        android:nestedScrollingEnabled="true"
        android:onClick="onButtonClick" />



</RelativeLayout>
